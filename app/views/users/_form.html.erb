<%= form_for(@user) do |f| %>

    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :role %><br>
      <%= f.select :role, User.roles.keys.to_a.map { |role| [role.capitalize, role]} %>
    </div>
    <div class="actions">

      <%= f.submit class: 'btn btn-success' %>
      <%= link_to 'Back', users_path, class: 'btn btn-default' %>
    </div>
<% end %>