
<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Tacos Dashboard</h3>
      </div>

      <div class="panel-body text-center">
      <% if user_signed_in? %>
          <p>Sales, Labor and Meal4Meal Tracking</p>
      <% else %>
            <h5>Please sign in to continue</h5>
            <%= link_to "Sign in", user_omniauth_authorize_path(:google_oauth2), :class => 'btn btn-primary' %>

      <% end %>
      </div>

    </div>


  </div>


</div>
